pipeline {
  agent any
  stages {
    
    stage('Build') {
      steps {
        sh 'make build-assignment5'
      }
    }
    stage('Docker') {
      steps {
        sh 'make get-tags'
        sh 'make skaffold-build-assignment5'
      }
    }
    
    stage('Deploy') {
      steps {
        sh 'make skaffold-deploy-assignment5'
      }
    }
  }
  environment {
    NAMESPACE = 'pre-production'
    PROFILE = 'pre-prod'
    DOCKER_REGISTRY = 'docker08.helpchat.in:5000'
  }
}