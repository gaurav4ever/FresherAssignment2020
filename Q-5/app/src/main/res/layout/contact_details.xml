<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:padding="20dp"
       android:layout_margin="30dp"
       android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardElevation="2dp"
            android:id="@+id/card"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="20dp">
            <ImageView
                android:clipToPadding="false"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contactImage_CD"
                android:src="@drawable/user"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/card"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_CD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Name"
                android:textColor="@color/theme"
                android:textSize="@dimen/nameSize" />

            <TextView
                android:id="@+id/number_CD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98874242"
                android:textColor="@color/number"
                android:textSize="@dimen/numberSize"/>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#5895FE"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editContact_CD"
                android:textColor="@color/cardview_light_background"
                android:text="EDIT"
                android:textSize="@dimen/nameSize"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

   </androidx.cardview.widget.CardView>
</layout>